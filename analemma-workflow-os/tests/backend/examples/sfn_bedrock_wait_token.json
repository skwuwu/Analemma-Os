{
  "StartAt": "InvokeBedrock",
  "States": {
    "InvokeBedrock": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke.waitForTaskToken",
      "Parameters": {
        "FunctionName": "arn:aws:lambda:us-east-1:123456789012:function:InvokeBedrockAsyncLambda",
        "Payload": {
          "TaskToken.$": "$$.Task.Token",
          "input.$": "$"
        }
      },
      "TimeoutSeconds": 86400,
      "Next": "ProcessResult"
    },
    "ProcessResult": {
      "Type": "Pass",
      "End": true
    }
  }
}
