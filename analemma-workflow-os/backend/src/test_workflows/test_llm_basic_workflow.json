{
    "workflow_name": "test_llm_basic_workflow",
    "description": "LI-A: 기본 LLM 호출 테스트 - Gemini/Bedrock 텍스트 생성",
    "version": "1.0.0",
    "nodes": [
        {
            "id": "start",
            "type": "operator_official",
            "config": {
                "strategy": "timestamp",
                "params": {
                    "format": "iso"
                },
                "output_key": "start_time"
            }
        },
        {
            "id": "llm_call",
            "type": "llm_chat",
            "config": {
                "provider": "gemini",
                "model": "gemini-2.0-flash",
                "system_prompt": "You are a helpful assistant. Respond concisely.",
                "prompt_content": "{{prompt}}",
                "max_tokens": 256,
                "temperature": 0.7,
                "output_key": "llm_output"
            }
        },
        {
            "id": "validate_output",
            "type": "operator_official",
            "config": {
                "strategy": "if_else",
                "input_key": "llm_output",
                "params": {
                    "condition": "$.llm_output != ''",
                    "then": "valid",
                    "else": "invalid"
                },
                "output_key": "validation_status"
            }
        },
        {
            "id": "finalize",
            "type": "operator_official",
            "config": {
                "strategy": "merge_objects",
                "params": {
                    "objects": [
                        {
                            "status": "COMPLETE",
                            "test_type": "basic_llm_call"
                        }
                    ]
                },
                "output_key": "final_status"
            }
        }
    ],
    "edges": [
        {
            "source": "start",
            "target": "llm_call"
        },
        {
            "source": "llm_call",
            "target": "validate_output"
        },
        {
            "source": "validate_output",
            "target": "finalize"
        }
    ],
    "start_node": "start",
    "initial_state": {
        "prompt": "Write a haiku about cloud computing."
    }
}