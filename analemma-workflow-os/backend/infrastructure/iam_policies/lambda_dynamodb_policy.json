{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "dynamodb:GetItem",
        "dynamodb:PutItem",
        "dynamodb:UpdateItem",
        "dynamodb:Scan",
        "dynamodb:Query"
      ],
      "Resource": [
        "arn:aws:dynamodb:*:*:table/Workflows",
        "arn:aws:dynamodb:*:*:table/TaskTokens",
        "arn:aws:dynamodb:*:*:table/Users"
      ]
    }
  ]
}
